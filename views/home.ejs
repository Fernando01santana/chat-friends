<body>
    <div class="container h-80">
        <div class="row align-items-center h-100">
            <div class="col-md-3 mx-auto">
                <div class="text-center">
                    <!-- <img id="profile-img" class="rounded-circle profile-img-card" src="img/chat.png" /> -->

                    <p id="profile-name" class="profile-name-card"></p>
                    <form class="form-signin" id="env" action="/chat" method="GET">


                        <input type="text" name="username" id="username" class="form-control form-group w-100"
                            placeholder="username" required autofocus>
                        <button class="btn btn-lg btn-primary btn-block btn-signin w-100" type="button"
                            onclick="up(event)">enter</button>
                        <p id="msg" style="color:white;">Bela tentativa</p>
                    </form><!-- /form -->
                </div>
            </div>
        </div>
    </div>

